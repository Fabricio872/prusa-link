{% block styles %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        #prusaLink {
            display: inline-block;
            width: 100%;
            max-width: 420px;
            background-color: #ffffff;
            font-family: "Arial Hebrew", Arial, sans-serif;
        }

        #prusaLink .header {
            height: 35px;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        #prusaLink .header .titleImage {
            height: 100%;
            margin: auto;
        }

        #prusaLink .header .linkIcon {
            display: inline-block;
            float: right;
            margin-top: -20px;
            margin-right: 5px;
            color: #000000;
            text-decoration: none;
        }

        #prusaLink .body {
            padding-bottom: 15px;
        }

        #prusaLink .body .image {
            width: 100%;
            margin-bottom: 10px;
        }

        #prusaLink .body .author {
            padding-left: 10px;
            display: inline;
        }

        #prusaLink .body .authorImage {
            height: 32px;
            border-radius: 50%;
            display: inline;
            margin-left: 10px;
            margin-bottom: -10px;
        }

        #prusaLink .body .title {
            border-top: solid 2px #888888;
            border-bottom: solid 2px #888888;
            margin: 10px 10px 5px;
        }
    </style>
{% endblock %}

{% block body %}{% endblock %}
