{% extends 'base.html.twig' %}

{% block body %}
    <div id="prusaLink">
        <div class="header">
            <img class="titleImage" src="https://prusaprinters.org/assets/images/pp-logo-web-beta.svg" alt="Logo">
            <a class="fa linkIcon fa-external-link" href="{{ link }}" target="_blank"></a>
        </div>
        <div class="body">
            <img class="image" src="{{ linkData.image }}" alt="">

            {% if linkData.authorImage != '' %}
                <img class="authorImage" src="{{ linkData.authorImage }}" alt="">
            {% endif %}
            <p class="author">
                {{ linkData.author }}
            </p>
            <h3 class="title">{{ linkData.title }}</h3>
        </div>
    </div>
{% endblock %}
